<p id="notice"><%= notice %></p>

<h1>Pets</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Gender</th>
      <th>Type</th>
      <th>Prefectures name</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= image_tag pet.image.url %></td>
        <td><%= pet.gender %></td>
        <td><%= pet.animal_type %></td>
        <td><%= pet.prefectures_name %></td>
        <td><%= pet.content %></td>
      <% if current_user.client == false %>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.client == false %>
 <%= link_to 'New Pet', new_pet_path %>
<% end %>

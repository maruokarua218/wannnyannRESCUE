<p id="notice"><%= notice %></p>

<p>
  <strong>Image:</strong>
  <%= image_tag @pet.image.url if @pet.image.present? %>
</p>

<p>
  <strong>Gender:</strong>
  <%= @pet.gender %>
</p>

<p>
  <strong>Type:</strong>
  <%= @pet.animal_type %>
</p>

<p>
  <strong>Prefectures name:</strong>
  <%= @pet.prefectures_name %>
</p>

<p>
  <strong>Content:</strong>
  <%= @pet.content %>
</p>

<% if current_user.client == true %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(pet_id: @pet.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<% if current_user.client == true %>
  <%= link_to 'Back', favorites_path %>
<% end %>


<% if current_user.client == false %>
  <%= link_to 'Edit', edit_pet_path(@pet) %> |
  <%= link_to 'Back', pets_path %>
<% end %>

<p id="notice"><%= notice %></p>

<p>
  <strong>写真:</strong>
  <%= image_tag @pet.image.url if @pet.image.present? %>
</p>

<p>
  <strong>性別:</strong>
  <%= @pet.gender_i18n %>
</p>

<p>
  <strong>種類:</strong>
  <%= @pet.animal_type %>
</p>

<p>
  <strong>県名:</strong>
  <%= @pet.prefectures_name_i18n %>
</p>

<p>
  <strong>その他の情報:</strong>
  <%= @pet.content %>
</p>

<%= link_to '戻る', pets_path %>
<% if current_user && current_user.client == true %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(pet_id: @pet.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<% if current_user && current_user.client == true %>
  <%= link_to 'お気に入り一覧', favorites_path %>
<% end %>


<% if current_user && current_user.client == false %>
  <%= link_to '編集', edit_pet_path(@pet) %> 
<% end %>

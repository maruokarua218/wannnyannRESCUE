<h1>検索結果</h1>
<table>
  <thead>
    <tr>
      <th>キーワード検索</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <thead>
    <tr>
      <th>投稿者</th>
      <th>写真</th>
      <th>性別</th>
      <th>種類</th>
      <th>県名</th>
      <th>その他の情報</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |pet| %>
      <tr>
        <td><%= pet.user.name %></td>
        <td><%= image_tag pet.image.url %></td>
        <td><%= pet.gender_i18n %></td>
        <td><%= pet.animal_type %></td>
        <td><%= pet.prefectures_name_i18n %></td>
        <td><%= pet.content %></td>
        <td><%= link_to '詳細', pet %></td>
    <% if current_user && current_user.client == false %>
        <td><%= link_to '編集', edit_pet_path(pet) %></td>
        <td><%= link_to '削除', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "戻る", :back %>

<h1>お気に入り登録した投稿</h1>

<table>
  <thead>
    <tr>
      <th>name</th>
      <th>Image</th>
      <th>Gender</th>
      <th>Type</th>
      <th>Prefectures name</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorite_pets.each do |favorite| %>
      <tr>
        <td><%= favorite.user.name %></td>
        <td><%= image_tag favorite.pet.image.url %></td>
        <td><%= favorite.pet.gender %></td>
        <td><%= favorite.pet.animal_type %></td>
        <td><%= favorite.pet.prefectures_name %></td>
        <td><%= favorite.pet.content %></td>
        <td><%= link_to '詳細', favorite.pet %></td>
        <% end %>
      </tr>
  </tbody>
</table>

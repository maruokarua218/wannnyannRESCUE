<!DOCTYPE html>
<html>
  <head>
    <title>WannnyannRESCUE</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>

    <% if logged_in? %>
      <%= link_to "ペット一覧", root_path %>
      <%= link_to 'ユーザー一覧', users_path if logged_in? %>
      <%= link_to "メッセージ", user_path(current_user.id) %>
      <%= link_to "ログアウト", session_path(current_user.id), method: :delete %>
    <% else %>
      <%= link_to "新規登録", new_user_path %>
      <%= link_to "ゲストログイン", guest_login_path, method: :post %>
      <%= link_to "ゲスト管理者ログイン", admin_guest_login_path, method: :post %>
    <% end %>

    <%= yield %>
  </body>
</html>

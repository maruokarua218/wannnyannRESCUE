<h1>ユーザー編集</h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "エラー") %> ユーザーを編集<%= @user.name %>できません！</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true, url: admin_user_path ) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.label :管理者権限 %>
  <%= f.select :admin, [["管理者じゃないです", "false"],["管理者です", "true"]],include_blank: "選択" %><br><br>

  <%= f.submit "ユーザーを編集する" %><br><br>

  <%= link_to '戻る', admin_users_path %>
<% end %>
